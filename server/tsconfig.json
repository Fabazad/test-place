{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src" /* Répertoire racine des sources. */,
    "resolveJsonModule": true /* Autorise l'importation des modules JSON. */,
    "moduleResolution": "nodenext" /* Utilise la résolution de module node. */,
    "isolatedModules": true /* Assure que chaque fichier est traité comme un module isolé. */,
    "noEmitOnError": true /* Empêche l'émission des fichiers de sortie s'il y a des erreurs. */,
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "skipDefaultLibCheck": true,
    "allowJs": true,

    "paths": {
      "@/utils/*": ["utils/*"],
      "@/configs.js": ["configs.js"],
      "@/middlewares/*": ["middlewares/*"],
      "@/routes/*": ["routes/*"],
      "@/controllers/*": ["controllers/*"],
      "@/libs/*": ["libs/*"],
      "@/entities/*": ["entities/*"],
      "@/services/*": ["services/*"]
    },

    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": ["src/**/*.ts"] /* Fichiers à inclure dans la compilation. */,
  "exclude": ["node_modules", "**/*.spec.ts"] /* Fichiers à exclure de la compilation. */
}
